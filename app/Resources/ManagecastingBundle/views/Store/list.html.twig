{% extends 'layout.html.twig' %}
{% block title %}Store list{% endblock %}

{% block content %}
    {% include '@Managecasting/Store/navigation.html.twig' %}
    <br/>
    <div class="panel panel-default">
        <div class="panel-heading">Overview stores</div>
        <div class="panel-body">
            <table id="table" class="table table-striped">
                <thead>
                <tr>
                    <th>#</th>
                    <th>Name</th>
                    <th>Description</th>
                </tr>
                </thead>
                <tbody>
                {% for store in stores %}
                    <tr onclick="location.href='{{ path('manage_casting_store_detail', {'id': store.id}) }}';">
                        <td>{{ store.id }}</td>
                        <td>{{ store.name }}</td>
                        <td>{{ store.description }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}